{
  "name": "engine",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "worker": "tsx src/worker.ts",
    "worker:watch": "nodemon --watch src --ext ts --exec tsx src/worker.ts",
    "dbworker": "ts-node src/worker/dbsync.worker.ts",
    "stream": "ts-node src/worker/stream.worker.ts",
    "limit": "ts-node src/worker/limit.worker.ts",
    "sniper": "ts-node src/worker/sniper.worker.ts",
    "test": "jest --runInBand",
    "k6:market": "k6 run --out experimental-prometheus-rw k6/market_load_test.js",
    "k6:limit": "k6 run --out experimental-prometheus-rw k6/limit_load_test.js",
    "k6:sniper": "k6 run --out experimental-prometheus-rw k6/sniper_load_test.js",
    "k6:ws": "k6 run --out experimental-prometheus-rw k6/websocket_test.js",
    "dev:all": "concurrently -k -n SERVER,WORKER,DBSYNC,STREAM,LIMIT,SNIPER -c green,cyan,magenta,yellow,blue,red  \"npm run dev\" \"npm run worker\" \"npm run dbworker\" \"npm run stream\" \"npm run limit\" \"npm run sniper\"",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "worker:prod": "node dist/worker.js",
    "dbworker:prod": "node dist/worker/dbsync.worker.js",
    "stream:prod": "node dist/worker/stream.worker.js",
    "limit:prod": "node dist/worker/limit.worker.js",
    "sniper:prod": "node dist/worker/sniper.worker.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "bullmq": "^5.64.1",
    "fastify": "^5.6.2",
    "fastify-websocket": "^4.2.2",
    "ioredis": "^5.8.2",
    "prisma": "^6.19.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "fastify-tsconfig": "^3.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "redis-mock": "^0.56.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
